				<body>
					<div id="pageContainer" class="pageContainer">
						<div id="header">
							<div class="logo" id="top"> 
							</div>
							<div id="menuButton" class="hide">
								<a id="jump" href="#nav">Main Navigation</a>
							</div> 
							<ul class="links" id="nav">
								<li><a href="#" target="_blank">Full Page<img src="images/max.png"></img></a>
								<span class="divider"> |&nbsp;</span>
								</li>
								<li>
								<a href="<%= settings.source_link %>" target="_blank">Source<img src="images/opensource.png"/></a>
								<span class="divider"> |&nbsp;</span>
								</li>
								<li>
								<a href="<%= settings.download_link %>" target="_blank">Download<img src="images/download.png"></a>
								<span class="divider"> |&nbsp;</span>
								</li>
								<li>
								<a href="<%= settings.help_link %>" target="_blank">Help</a>
								</li>
								<li id="back"><a href="#top">Back to top</a>
								</li></ul> <!-- end of links -->
							</div> <!-- end of header -->
							<div class="content">
								<div class="contentHeading">
									<h1>AT&amp;T Sample Application - Speech to Text</h1>
									<div id="introtext">
										<div><b>Server Time:</b> <%= Time.now.utc.strftime("%a, %B %d, %Y %H:%M:%S UTC") %></div>
										<div><b>Client Time:</b> <script>document.write("" + new Date());</script></div>
										<div><b>User Agent:</b> <script>document.write("" + navigator.userAgent);</script></div>
									</div> <!-- end of introtext -->
								</div> <!-- end of contentHeading -->
								<div class="formBox" id="formBox">
									<div id="formContainer" class="formContainer">
										<form name="SpeechToText" action="SpeechToText" method="post" enctype="multipart/form-data">
											<div id="formData">
												<h3>Speech Context:</h3>
												<select name="SpeechContext">
													<% @type_list.each do |x| %>
														<option value="<%= x %>" <%= if x.eql? @selected_type then 'selected="selected"' end %>><%= x %></option>
														<% end %>
													</select>
													<h3>Audio File:</h3>
													<select name="audio_file">
														<% @audio_file_list.each do |x| %>
															<option value="<%= x %>" <%= if x.eql? @selected_file then 'selected="selected"' end %>><%= x %></option>
															<% end %>
														</select>
														</br>
														<div id="chunked">
															<b>Send Chunked:</b>
															<input name="chkChunked" value="Send Chunked" type="checkbox" <%= "checked" if @selected_chunked %>>
														</div>
														<h3>X-Arg:</h3>
														<textarea id="x_arg" type="text" name="x-arg" readonly="readonly" rows="4" value="<%= settings.X_arg %>"><%= settings.X_arg %></textarea>
														<br><button type="submit" name="SpeechToText">Submit</button>
													</div>
												</form>
											</div>
										</div>
										<% if @result %>
											<div class="successWide" align="left">
												<strong>SUCCESS:</strong>
												<br />
												Response parameters listed below.
											</div>
											<table class="kvp">
												<thead>
													<tr>
														<th class="label">Parameter</th>
														<th class="label">Value</th>
													</tr>
												</thead>
												<tbody>
													<tr>
														<td class="cell" align="center"><em>ResponseId</em></td>
														<td class="cell" align="center"><em><%= @result['Recognition']['ResponseId'] %></em></td>
													</tr>
													<tr>
														<td class="cell" align="center"><em>Status</em></td>
														<td class="cell" align="center"><em><%= @result['Recognition']['Status'] %></em></td>
													</tr>
													<%
if @result['Recognition']['Status'].eql? "OK" then
nbest = @result['Recognition']['NBest']
nbest.each do |key, val| %>
<tr>
	<td class="cell" align="center"><em>Hypothesis</em></td>
	<td class="cell" align="center"><em><%= key['Hypothesis'] %></em></td>
</tr>
<tr>
	<td class="cell" align="center"><em>LanguageId</em></td>
	<td class="cell" align="center"><em><%= key['LanguageId'] %></em></td>
</tr>
<tr>
	<td class="cell" align="center"><em>Confidence</em></td>
	<td class="cell" align="center"><em><%= key['Confidence'] %></em></td>
</tr>
<tr>
	<td class="cell" align="center"><em>Grade</em></td>
	<td class="cell" align="center"><em><%= key['Grade'] %></em></td>
</tr>
<tr>
	<td class="cell" align="center"><em>ResultText</em></td>
	<td class="cell" align="center"><em><%= key['ResultText'] %></em></td>
</tr>
<tr>
	<td class="cell" align="center"><em>Words</em></td>
	<td class="cell" align="center"><em><%= key['Words'].join(", ") %></em></td>
</tr>
<tr>
	<td class="cell" align="center"><em>WordScores</em></td>
	<td class="cell" align="center"><em><%= key['WordScores'].join(", ") %></em></td>
</tr>
<% end end %>
						</tbody>
					</table>
				<% end %>
				<% if @error %>
					<div class="errorWide">
						<strong>ERROR:</strong>
						<br />
						<%= @error %>
					</div>
				<% end %>
